{
    "name": "bigscreenapp",
    "main": "expo-router/entry",
    "version": "1.0.0",
    "scripts": {
        "start": "EXPO_TV=1 expo start",
        "android": "EXPO_TV=1 expo run:android",
        "ios": "EXPO_TV=1 expo run:ios",
        "web": "expo start --web",
        "reset-project": "./scripts/reset-project.js",
        "lint": "expo lint",
        "prebuild": "expo prebuild --clean",
        "prebuild:tv": "EXPO_TV=1 expo prebuild --clean",
        "deploy": "npx expo export -p web && npx eas-cli@latest deploy",
        "test": "npx jest"
    },
    "dependencies": {
        "@expo/vector-icons": "^15.0.2",
        "expo": "^54.0.1",
        "expo-build-properties": "~1.0.7",
        "expo-font": "~14.0.7",
        "expo-linking": "~8.0.7",
        "expo-router": "~6.0.0",
        "expo-splash-screen": "~31.0.8",
        "expo-status-bar": "~3.0.7",
        "expo-system-ui": "~6.0.7",
        "expo-web-browser": "~15.0.6",
        "react": "19.1.0",
        "react-dom": "19.1.0",
        "react-native": "npm:react-native-tvos@0.81.4-0",
        "react-native-gesture-handler": "~2.28.0",
        "react-native-keyevent": "^0.3.2",
        "react-native-reanimated": "~4.1.0",
        "react-native-safe-area-context": "~5.6.0",
        "react-native-screens": "~4.16.0",
        "react-native-video": "^6.17.0",
        "react-native-web": "^0.21.0",
        "react-native-worklets": "~0.5.0",
        "react-tv-space-navigation": "^6.0.0-beta1"
    },
    "devDependencies": {
        "@react-native-tvos/config-tv": "^0.1.4",
        "@testing-library/jest-native": "^5.4.3",
        "@testing-library/react-native": "^12.9.0",
        "@types/jest": "^29.5.14",
        "@types/react": "~19.1.10",
        "babel-jest": "^30.2.0",
        "babel-preset-expo": "^54.0.6",
        "eslint-plugin-testing-library": "^7.13.3",
        "jest": "^29.7.0",
        "jest-expo": "~54.0.0",
        "ts-jest": "^29.4.5",
        "typescript": "~5.9.2"
    },
    "expo": {
        "install": {
            "exclude": [
                "react-native"
            ]
        }
    },
    "private": true
}
